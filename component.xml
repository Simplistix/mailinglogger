<component prefix="Products.MailingLogger.datatypes">

  <sectiontype name="mailing-logger" datatype=".MailingLoggerHandlerFactory"
               implements="zLOG.loghandler" extends="zLOG.base-log-handler">
    <key name="from" required="yes" attribute="fromaddr"/>
    <multikey name="to" required="yes" attribute="toaddrs"/>
    <key name="subject" default="[Zope] %(line)s" datatype=".subject_log_format"/>
    <key name="smtp-server" default="localhost" datatype="inet-address"/>
    <key name="format" default="%(message)s"
         datatype="zLOG.datatypes.log_format"/>
  </sectiontype>

  <sectiontype name="summarising-logger" datatype=".SummarisingLoggerHandlerFactory"
               implements="zLOG.loghandler" extends="zLOG.base-log-handler">
    <key name="from" required="yes" attribute="fromaddr"/>
    <multikey name="to" required="yes" attribute="toaddrs"/>
    <key name="subject" default="[Zope] %(line)s" datatype=".subject_log_format"/>
    <key name="smtp-server" default="localhost" datatype="inet-address"/>
    <key name="format" default="%(message)s"
         datatype="zLOG.datatypes.log_format"/>
  </sectiontype>

</component>
